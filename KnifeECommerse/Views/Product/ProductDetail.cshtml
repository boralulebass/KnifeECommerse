
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Layout/Index.cshtml";
}

<!-- Product Detail -->
<section class="sec-product-detail bg0 p-t-65 p-b-60">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-7 p-b-30">
                <div class="p-l-25 p-r-30 p-lr-0-lg">
                    <div class="wrap-slick3 flex-sb flex-w">
                        <div class="wrap-slick3-dots"></div>
                        <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                        <div class="slick3 gallery-lb">
                            <div class="item-slick3" data-thumb="@ViewBag.Img">
                                <div class="wrap-pic-w pos-relative">
                                    <img src="@ViewBag.Img" alt="IMG-PRODUCT">

                                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="@ViewBag.Img">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-5 p-b-30">
                <div class="p-r-50 p-t-5 p-lr-0-lg">
                    <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                        @ViewBag.ProductName
                    </h4>
                   
                                    @if (ViewBag.OldPrice != null)
                                    {
                                        <span class="mtext-106 cl2 old-price">
                                            @ViewBag.OldPrice
                                        </span>
                                        <span class="mtext-106 cl2 discounted-price" style="color:black">
                                            @ViewBag.Price
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="mtext-106 cl2 discounted-price" style="color:black">
                                            @ViewBag.Price
                                        </span>
                                    }

                    <p class="stext-102 cl3 p-t-23">
                        @ViewBag.ProductDescription
                    </p>

                    <!--  -->
                    <div class="p-t-33">
                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-204 flex-w flex-m respon6-next">
                                <a href="https://wa.me/@ViewBag.PhoneNumber?text=@ViewBag.ProductName%20siparis%20vermek%20istiyorum.%20" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04" style="background-color:green" target="_blank">
                                    Whatsapp İLE SİPARİŞ VER
                                </A>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="bor10 m-t-50 p-t-43 p-b-40">
            <!-- Tab01 -->
            
                 @await Component.InvokeAsync("_CommentsByProduct")                
        </div>
    </div>

    <div class="bg6 flex-c-m flex-w size-302 m-t-73 p-tb-15">
    </div>
</section>
<style>
    .old-price {
        text-decoration: line-through;
        opacity: 0.7;
    }

    .discounted-price {
        color: #ff5722;
    }
</style>
