@using EntityLayer.Concrete;
@using System.Globalization;
@model List<BestSeller>
<!-- Product -->
<section class="sec-product bg0 p-t-100 p-b-50">
    <div class="container">
        <div class="p-b-32">
            <h3 class="ltext-105 cl5 txt-center respon1">
                ÇOK SATANLAR
            </h3>
        </div>

        <!-- Tab01 -->
        <div class="tab01">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item p-b-10">
                    <a class="nav-link active" data-toggle="tab" href="#best-seller" role="tab">En Çok Satan Ürünlerimize Göz Atın</a>
                </li>
            </ul>
            <br />
            <br />

            <!-- Tab panes -->
            <!-- Slide2 -->
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 col-6 p-b-35 isotope-item">
                        <!-- Block2 -->
                        <div class="block2">
                            <div class="block2-pic hov-img0">
                                <img src="@item.Product.ProductImg" alt="IMG-PRODUCT">
                                <a href="/surmenebicaklari/urundetaylari/@item.ProductID" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                    İncele
                                </a>
                            </div>
                            <div class="block2-txt flex-w flex-t p-t-14">
                                <div class="block2-txt-child1 flex-col-l">
                                    <a href="/surmenebicaklari/urundetaylari/@item.ProductID" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6" style="color:black">
                                        @item.Product.ProductName
                                    </a>

                                    @if (item.Product.ProductOldPrice > 0)
                                    {
                                        <span class="stext-105 cl3 old-price">
                                            @item.Product.ProductOldPrice.ToString("C", new CultureInfo("tr-TR"))
                                        </span>
                                        <span class="stext-105 cl3 discounted-price" style="color:black">
                                            @item.Product.ProductPrice.ToString("C", new CultureInfo("tr-TR"))
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="stext-105 cl3 discounted-price" style="color:black">
                                            @item.Product.ProductPrice.ToString("C", new CultureInfo("tr-TR"))
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</section>
<style>
    .old-price {
        text-decoration: line-through;
        opacity: 0.7;
    }

    .discounted-price {
        color: #ff5722;
    }
</style>