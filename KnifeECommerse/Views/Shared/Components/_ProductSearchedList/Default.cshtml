@using EntityLayer.Concrete;
@using System.Globalization;
@model List<Product>
@foreach (var item in Model)
{
    <div class="col-md-4 col-lg-3 col-6 p-b-35 isotope-item @item.CategoryID">
        <!-- Block2 -->
        <div class="block2">
            <div class="block2-pic hov-img0">
                <img src="@item.ProductImg" alt="IMG-PRODUCT">

                <a href="/surmenebicaklari/urundetaylari/@item.ProductID" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                    İncele
                </a>
            </div>

            <div class="block2-txt flex-w flex-t p-t-14">
                <div class="block2-txt-child1 flex-col-l">
                    <a href="/surmenebicaklari/urundetaylari/@item.ProductID" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6" style="color:black">
                        @item.ProductName
                    </a>

                    @if (item.ProductOldPrice > 0)
                    {
                        <span class="stext-105 cl3 old-price">
                            @item.ProductOldPrice.ToString("C", new CultureInfo("tr-TR"))
                        </span>
                        <span class="stext-105 cl3 discounted-price" style="color:black">
                            @item.ProductPrice.ToString("C", new CultureInfo("tr-TR"))
                        </span>
                    }
                    else
                    {
                        <span class="stext-105 cl3 discounted-price" style="color:black">
                            @item.ProductPrice.ToString("C", new CultureInfo("tr-TR"))
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
}
<style>
    .old-price {
        text-decoration: line-through;
        opacity: 0.7;
    }

    .discounted-price {
        color: #ff5722;
    }
</style>
